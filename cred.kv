<LoginWindow>:
    name: "login"

    email: email
    password: password

    FloatLayout:

        Label:
            text:"Email: "
            font_size: (root.width**2 + root.height**2) / 15**4
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.35, 0.075

        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 15**4
            multiline: False
            pos_hint: {"x": 0.45 , "top":0.9}
            size_hint: 0.4, 0.15

        Label:
            text:"Password: "
            font_size: (root.width**2 + root.height**2) / 15**4
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.35, 0.075

        TextInput:
            id: password
            font_size: (root.width**2 + root.height**2) / 15**4
            multiline: False
            password: True
            pos_hint: {"x": 0.45, "top":0.7}
            size_hint: 0.4, 0.15

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 15**4
            text: "Login"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()
    
<MainWindow>:
    name: "main"
    
    FloatLayout:
        Label:
            id: n
            pos_hint:{"x": 0.1, "top":0.9}
            size_hint:0.8, 0.2
            text: "Welcome"

        Button:
            pos_hint:{"x":0.2,"top":0.6}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 15**4
            text: "Compute sales"
            on_release:
                root.manager.transition.direction = "up"
                root.computeBtn()
        Button:
            pos_hint:{"x":0.2, "y": 0.1}
            size_hint:0.6,0.2
            text: "Log Out"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"        
